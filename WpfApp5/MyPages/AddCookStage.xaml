<Window x:Class="WpfApp5.MyPages.AddCookStage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5.MyPages"
        mc:Ignorable="d"
        Title="AddCookStage" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Описание"></TextBlock>
            <TextBox Text="{Binding Description}" Style="{StaticResource MyTextBox}" Width="123"></TextBox>
            <Button x:Name="SaveBtn" Content="Save" Margin="5" Click="SaveBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
 